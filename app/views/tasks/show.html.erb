<h1><%= @task.title %></h1>
<p class="bg-light bordered p-3 col-6"><%= @task.details %></p>
<p>
  <% if @task.completed %>
    <i class="far fa-check-square"></i>
  <% else %>
    <i class="far fa-square"></i>
  <% end %>
  <%= @task.completed ? "This task is completed" : "This task is not yet completed" %>
</p>
<%= link_to 'Edit', edit_task_path(@task), class: 'btn btn-success' %>
<%= link_to 'Back to list', tasks_path, class: 'btn btn-primary' %>
